<div class="container main-view" style="padding-top: 65px;">
  <div class="row">

    <div class="col-md-4">
      <div class="row">

        <div class="col-md-11" ng-controller="HabitCtrl" id="habits_section">
          <h2>Habits</h2>
          <table class="table-bordered table-striped">
            <tr ng-repeat="habit in habits">
              <td>
                <b>{{habit.verb}} {{habit.amount}} {{habit.subject}} {{habit.interval}} - pts</b>
                <a class="btn btn-default" href="#" role="button" ng-click="deleteHabit(habit.id)">-</a>
              </td>
            </tr>
          </table>
          <p><a class="btn btn-default" href="#" role="button" ng-click="expandHabitForm()">+</a></p>
          <form id="newHabitForm">
            <input type="text" id="verb" placeholder="Verb" ng-model="newHabitForm.verb">
            <input type="text" id="amount" placeholder="amount" ng-model="newHabitForm.amount">
            <input type="text" placeholder="subject" id="subject" ng-model="newHabitForm.subject">
            <select id="interval" ng-init="newHabitForm.interval = newHabitForm.interval || interval_options[1]"
                                  ng-options="interval_option for interval_option in interval_options"
                                  ng-model="newHabitForm.interval"> <br />
            </select>
            <input type="text" placeholder="points" id="points" ng-model="newHabitForm.points">

            <div>
              <a class="btn btn-default btn-xs" href="#" role="button" ng-click="collapseHabitForm()">Cancel</a>
              <a class="btn btn-primary btn-xs" href="#" role="button" ng-click="submitHabitForm()">Submit</a>
            </div>
          </form>
        </div><!-- closing top box on first column -->

        <div class="col-md-11" ng-controller="TaskCtrl" id="tasks_section">
          <h2>Tasks</h2>
          <table class="table-bordered table-striped">
            <tr ng-repeat="task in tasks">
              <td>
                <b>{{task.name}}</b>
                <a class="btn btn-default" href="#" role="button" ng-click="deleteTask(task.id)">-</a>
                <br />
                Points: {{task.points}} <br />
                Due Date: {{task.due_date}}
              </td>
            </tr>
          </table>
          <p><a class="btn btn-default" href="#" role="button" ng-click="expandTaskForm()">+</a></p>
          <div id="newTaskForm">
            Name: <input type="text" id="name" ng-model="newTaskForm.name"> <br />
            Due Date: <input type="text" id="duedate" ng-model="newTaskForm.duedate" placeholder="COMING SOON" disabled="disabled"> <br />
            Points: <input type="text" id="points" ng-model="newTaskForm.points"> <br />
            <div>
              <a class="btn btn-default btn-xs" href="#" role="button" ng-click="collapseTaskForm()">Cancel</a>
              <a class="btn btn-primary btn-xs" href="#" role="button" ng-click="submitTaskForm()">Submit</a>
            </div>
          </div>
        </div><!-- closing bottom box on first column -->

      </div>
    </div> <!-- closing first column -->

    <div class="col-md-4">
      <div class="row">

        <div class="col-md-11" id="bounties_section">
          <h2>Bounties</h2>
          <p><a class="btn btn-default" href="#" role="button">+</a></p> COMING SOON
        </div>

        <div class="col-md-11" ng-controller="CardCtrl" id="cards_section">
          <h2>Cards</h2>
          <table class="table-bordered table-striped">
            <tr ng-repeat="card in cards">
              <td>
                <b>{{card.description}}</b>
                {{card.value}}pts - {{card.category}}
                <a class="btn btn-default" href="#" role="button" ng-click="deleteCard(card.id)">-</a>
              </td>
            </tr>
          </table>
          <p><a class="btn btn-default" href="#" role="button" ng-click="expandCardForm()">+</a></p>
          <div id="newCardForm">
            Description: <input type="text" id="name" ng-model="newCardForm.description"> <br />
            Points: <input type="text" id="duedate" ng-model="newCardForm.value"> <br />
            Category: <input type="text" id="points" ng-model="newCardForm.category"> <br />
            Recipient_id: <input type="text" id="points" ng-model="newCardForm.recipient_id"> <br />

            Author_id: <input type="text" id="points" ng-model="newCardForm.author_id"> <br />

            <div>
              <a class="btn btn-default btn-xs" href="#" role="button" ng-click="collapseCardForm()">Cancel</a>
              <a class="btn btn-primary btn-xs" href="#" role="button" ng-click="submitCardForm()">Submit</a>
            </div>

          </div>
        </div>
      </div>
    </div> <!-- closing second column  -->

    <div class="col-md-3">
      <div class="row">

        <div class="col-md-11" id="trends_section">
          <h2>Trends</h2>
          <p><a class="btn btn-default" href="#" role="button">+</a></p> COMING SOON
        </div>

        <div class="col-md-11" id="vices_section">
          <h2>Vices</h2>
          <p><a class="btn btn-default" href="#" role="button">+</a></p> COMING SOON
        </div>
      </div>
    </div><!-- closing third column -->

  </div> <!-- /row -->
</div> <!-- /container -->



