    </div>

    <div class="col-md-4" ng-controller="TaskCtrl">
      <h2>Tasks</h2>
      <table class="table-bordered table-striped">
        <tr ng-repeat="task in tasks">
          <td>
            <b>{{task.name}}</b>
            <a class="btn btn-default" href="#" role="button" ng-click="deleteTask(task.id)">-</a>
            <br />
            Points: {{task.points}} <br />
            Due Date: {{task.due_date}}
          </td>
        </tr>
      </table>
      <p><a class="btn btn-default" href="#" role="button" ng-click="expandTaskForm()">+</a></p>
      <div id="newTaskForm">
        Name: <input type="text" id="name" ng-model="newTaskForm.name"> <br />
        Due Date: <input type="text" id="duedate" ng-model="newTaskForm.duedate"> <br />
        Points: <input type="text" id="points" ng-model="newTaskForm.points"> <br />
        <div>
          <a class="btn btn-default btn-xs" href="#" role="button" ng-click="collapseTaskForm()">Cancel</a>
          <a class="btn btn-primary btn-xs" href="#" role="button" ng-click="submitTaskForm()">Submit</a>
        </div>
      </div>

    <div ng-show></div>
    </div>

    <div class="col-md-4">
